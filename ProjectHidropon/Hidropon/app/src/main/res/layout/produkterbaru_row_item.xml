<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/allProduct_ImgProduct"
        android:layout_width="180dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/produk_sayur" />

    <TextView
        android:id="@+id/namaProdukTerbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/allProduct_ImgProduct"
        app:layout_constraintStart_toStartOf="@+id/allProduct_ImgProduct"
        app:layout_constraintTop_toBottomOf="@+id/allProduct_ImgProduct" />
</androidx.constraintlayout.widget.ConstraintLayout>