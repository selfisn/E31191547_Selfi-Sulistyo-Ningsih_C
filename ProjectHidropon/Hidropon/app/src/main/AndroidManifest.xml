<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hidropon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hidroponid"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hidropon"
        android:usesCleartextTraffic="true">
        <activity android:name=".CheckOut"></activity>
        <activity android:name=".CartActivity" />
        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Hidropon.Id">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="SIGN UP" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AllProduk" />
        <activity android:name=".ProdukDetail" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>